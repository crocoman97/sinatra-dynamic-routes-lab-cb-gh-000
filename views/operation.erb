<% operation = params[:operation] 
num1 = params[:num1].to_i
num2 = params[:num2].to_i
%>
<% if operation == "add" %>
  <%= num1 + num2 %>
<% elsif operation == "subtract" %>
  <%= num2 - num1 %>
<% elsif operation == "multiply" %>
  <%= num1 * num2 %>
<% elsif operation == "divide" %>
  <%= num1 / num2 %>
<% end %>